<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="registerPanel" alignment="CENTER" prefHeight="700.0" prefWidth="900.0" stylesheets="@../style/modelo.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.damasfx.Controladores.RegisterController">
   <children>
      <Text fx:id="registerTitle" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="CREAR CUENTA">
         <VBox.margin>
            <Insets bottom="25.0" />
         </VBox.margin>
      </Text>
      <Label fx:id="labelAccount" text="Login">
         <VBox.margin>
            <Insets right="420.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="inputAccount">
         <VBox.margin>
            <Insets left="225.0" right="198.0" />
         </VBox.margin>
      </TextField>
      <Label fx:id="labelPassword" text="Contraseña">
         <VBox.margin>
            <Insets right="385.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="inputPassword" prefHeight="25.0" prefWidth="470.0">
         <VBox.margin>
            <Insets left="225.0" right="198.0" />
         </VBox.margin>
      </TextField>
      <Label text="Nombre">
         <VBox.margin>
            <Insets right="405.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="inputName">
         <VBox.margin>
            <Insets left="225.0" right="198.0" />
         </VBox.margin>
      </TextField>
      <Label text="Apellidos">
         <VBox.margin>
            <Insets right="395.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="inputSurname">
         <VBox.margin>
            <Insets left="225.0" right="198.0" />
         </VBox.margin>
      </TextField>
      <Label fx:id="labelEmail" text="Email">
         <VBox.margin>
            <Insets right="420.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="inputEmail">
         <VBox.margin>
            <Insets left="225.0" right="198.0" />
         </VBox.margin>
      </TextField>
      <Label text="Fecha de nacimiento">
         <VBox.margin>
            <Insets right="335.0" />
         </VBox.margin>
      </Label>
      <DatePicker fx:id="inputDate" prefHeight="25.0" prefWidth="476.0">
         <VBox.margin>
            <Insets left="25.0" />
         </VBox.margin>
      </DatePicker>
      <Label text="País de residencia">
         <VBox.margin>
            <Insets right="350.0" />
         </VBox.margin>
      </Label>
      <ComboBox fx:id="inputNacionality" prefHeight="25.0" prefWidth="477.0">
         <VBox.margin>
            <Insets bottom="60.0" left="25.0" />
         </VBox.margin>
      </ComboBox>
      <HBox alignment="CENTER" prefHeight="0.0" prefWidth="500.0">
         <children>
            <Button fx:id="btnEnter" mnemonicParsing="false" onAction="#registered" text="Confirmar">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnExit" mnemonicParsing="false" onAction="#comeBack" text="Volver" />
         </children>
      </HBox>
   </children>
</VBox>
